{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="h-full m-2">

    <h1 class="text-2xl lg:text-4xl font-semibold text-center text-title uppercase lg:font-extrabold">Mes participations</h1>
    

        {# En-tête du tableau #}
        <div class="grid grid-cols-12 bg-tabtitle font-bold text-text text-sm lg:text-md">
            <div class="col-start-1 col-span-3 p-2">Nom</div>
            <div class="col-start-4 col-span-2 p-2 hidden lg:block">Date</div>
            <div class="md:col-start-4 md:col-span-3 lg:col-start-6 lg:col-span-3 p-2 hidden md:block">Lieu</div>
            <div class="col-start-4 col-span-3 md:col-start-7 md:col-span-2 lg:col-start-9 lg:col-span-2 p-2">Aperçu</div>
            <div class="col-start-8 col-span-4 md:col-start-10 md:col-span-3 lg:col-start-11 lg:col-span-2 p-2">Inscription</div>
        </div>

        <div>
        {# Contenu dynamique #}
        {% for evenement in evenements %}
            <div class="col-span-12 grid grid-cols-12 odd:bg-odd even:bg-even text-text text-sm lg:text-md">
                <div class="col-start-1 col-span-3 p-2">{{ evenement.titre }}</div>
                <div class="col-start-4 col-span-2 p-2 hidden lg:block">{{ evenement.dateDebut }}</div>
                <div class="md:col-start-4 md:col-span-3 lg:col-start-6 lg:col-span-3 p-2 hidden md:block">{{ evenement.lieu }}</div>
                {# visualisation #}
                <div class="col-start-4 col-span-3 md:col-start-7 md:col-span-2 lg:col-start-9 lg:col-span-2 p-2">
                    <form action="index.php?controlleur=evtActu&methode=lister" method="post">
                        <input type="hidden" name="id" value="{{ evenement.evtId }}">
                        <input type="hidden" name="nom" value="{{ evenement.nom }}">
                        <input type="hidden" name="type" value="Evenements">
                        <button type="submit" class="flex items-center space-x-1 lg:space-x-2 bg-button hover:bg-hbutton text-tbutton px-2 lg:px-4 py-2 rounded-lg">
                            <img src="../asset/icones/eye.svg" alt="Visualiser" class="h-5 w-5">
                            <span>Voir</span>
                        </button>
                    </form>
                </div>
                {# actions #}
                <div class="col-start-8 col-span-4 md:col-start-10 md:col-span-3 lg:col-start-11 lg:col-span-2 p-2">
                    <form action="index.php?controlleur=mesParticipation&methode=desinscrire" method="post">
                        <INPUT TYPE="hidden" NAME="nom" VALUE="{{evenement.titre}}">
                        <INPUT TYPE="hidden" NAME="type" VALUE="Evenements"> 
                        <input type="hidden" name="evtId" value="{{ evenement.evtId }}">
                        <button type="submit" class="flex items-center space-x-2 bg-button hover:bg-hbutton text-tbutton px-4 py-2 rounded-lg">
                            <span>Se désinscrire</span>
                        </button>
                    </form>
                </div>
                
        {% endfor %}
        </div>
    </div>
    

{% endblock %}
