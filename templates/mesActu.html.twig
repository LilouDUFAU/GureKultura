{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="h-full m-2">

    <h1 class="text-3xl font-bold text-center text-principal-rouge">Mes actualités</h1>

{# mettre une ligne sur deux en gris #}
    <table class="mt-5 rounded-lg text-white text-sm lg:text-md">
        <thead>
            <tr class="bg-principal-rouge">
                <th class="p-2 text-left">Titre</th>
                <th class="p-2 text-left hidden md:block">Résumé</th>
                <th class="p-2 text-left">Date publication</th>
            </tr>
        </thead>
        <tbody>
            {% for actualite in actualites %}
                <tr class="odd:bg-principal-rouge odd:bg-opacity-35 even:bg-principal-rouge even:bg-opacity-75">
                    <td class="p-1">{{ actualite.titre }}</td>
                    <td class="p-1 hidden md:block">{{ actualite.resume }}</td>
                    <td class="p-1">{{ evenement.datePubli }}</td>
                    {# bouton de modification #}
                    <td class="p-1 flex justify-center items-center">
                        <form action="index.php?controlleur=modifActu&methode=lister" method="post">
                            <input type="hidden" name="actuId" value={{ actualite.actuId}}>
                            <button type="submit" class="p-1 rounded-lg h-6 w-6"><img src="../asset/icones/pencil-square.svg" alt="modification"></button>
                        </form>
                    </td>
                    {# bouton de suppression #}
                    <td class="p-1 flex justify-center items-center">
                        <form action="index.php?controlleur=mesActu&methode=supprimerActu" method="post">
                            <input type="hidden" name="actuId" value={{ actualite.actuId}}>
                            <button type="submit" class="bg-principal-rouge text-white p-1 rounded-lg h-6 w-6"><img src="../asset/icones/trash3.svg" alt="suppression"></button>
                        </form>
                    </td>
                        
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}