                            <div style="background-image: url('../asset/actualite/{{ evtActuASuivre.img }}')" class="bg-cover bg-no-repeat slide md:w-1/3 w-full flex-shrink-0 text-principal-rouge text-center py-16 rounded-lg relative">
                        {% endif %}
