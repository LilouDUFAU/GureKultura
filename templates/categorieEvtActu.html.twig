            {% endif %}
            {% if type == 'Actualites' %}
                <h3 class="row-span-2 col-span-12 text-black font-bold text-3xl text-left p-6">Aucune {{ type }} à venir</h3>
            {% endif %}
        {% endif %}


        {% if evtActusPasser is not empty %}
            <h3 class="row-span-5 col-span-12 text-black font-bold text-3xl text-left">{{ type }} passer</h3>
            
            <div id="carousel3" class="row-span-6 col-span-12 relative w-full overflow-hidden mx-auto bg-principal-vert opacity-75 rounded-lg" data-slides-default="1" data-slides-mobile="1">
                <!-- Conteneur du carrousel -->
