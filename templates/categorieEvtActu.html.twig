                                {% endif %}
                                {% if type == 'Actualites' %} 
                                    <INPUT TYPE="hidden" NAME="id" VALUE={{evtActuASuivre.actuId}}> 
                                {% endif %}
                                <INPUT TYPE="hidden" NAME="type" VALUE="{{ type }}"> 
                                <INPUT TYPE="SUBMIT" VALUE="{{ evtActuASuivre.titre }}" class="bg-white border-principal absolute inset-x-0 bottom-0 text-center rounded-lg p-2 mr-2 ml-2 mb-2">
                            </FORM>
