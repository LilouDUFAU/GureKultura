                <button id="next3" class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">></button>
            </div>
        {% endif %}
        {% if evtActusPasser is empty %}
            {% if type == 'Evenements' %}
                <h3 class="row-span-2 col-span-12 text-black font-bold text-3xl text-left p-6">Aucun {{ type }} passer</h3>
            {% endif %}
            {% if type == 'Actualites' %}
                <h3 class="row-span-2 col-span-12 text-black font-bold text-3xl text-left p-6">Aucune {{ type }} passer</h3>
            {% endif %}
        {% endif %}

    </div>
</div>
<script src="../js/caroussel.js"></script>
{% endblock %}
