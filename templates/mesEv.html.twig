{% extends "base.html.twig" %}

{% block content %}
	<!-- Contenu spécifique de chaque page -->
	<div class="h-full m-2">

    <h1 class="text-2xl lg:text-4xl font-semibold text-center text-title uppercase lg:font-extrabold">Mes événements</h1>
    
    <div class="grid grid-cols-12 w-full mt-5 text-text text-sm lg:text-md">
        {# En-tête du tableau #}
        <div class="col-span-12 grid grid-cols-12 bg-tabtitle font-bold">
            <div class="col-span-3 p-2">Nom</div>
            <div class="col-span-2 p-2 hidden md:block">Date</div>
            <div class="col-span-3 p-2">Lieu</div>
            <div class="col-span-2 p-2">Validation</div>
            <div class="col-span-2 p-2">Actions</div>
        </div>

        {# Contenu dynamique #}
        {% for evenement in evenements %}
            <div class="col-span-12 grid grid-cols-12 odd:bg-odd even:bg-even">
                <div class="col-span-3 p-2 break-words">{{ evenement.titre }}</div>
                <div class="col-span-2 p-2 hidden md:block break-words">{{ evenement.date|date('d/m/Y') }}</div>
                <div class="col-span-3 p-2 break-words">{{ evenement.lieu }}</div>
                <div class="col-span-2 p-2 break-words">
                    {% if evenement.isValide %}
                        <span class="text-green-600 font-semibold">Validé</span>
                    {% else %}
                        <span class="text-red-600 font-semibold">Non validé</span>
                    {% endif %}
                </div>
                <div class="col-span-2 p-2 flex space-x-4">
                    {# Bouton de modification #}
                    <form action="index.php?controlleur=modifEv&methode=lister" method="post">
                        <input type="hidden" name="evtId" value="{{ evenement.evtId }}">
                        <button type="submit" class="p-1 rounded-lg h-8 w-8 bg-blue-500 hover:bg-blue-600 text-white flex items-center justify-center">
                            <img src="../asset/icones/pencil-square.svg" class="w-5 h-5" alt="modifier">
                        </button>
                    </form>
                    {# Bouton de suppression #}
                    <form action="index.php?controlleur=mesEv&methode=supprimerEvent" method="post">
                        <input type="hidden" name="evtId" value="{{ evenement.evtId }}">
                        <button type="submit" class="p-1 rounded-lg h-8 w-8 bg-red-500 hover:bg-red-600 text-white flex items-center justify-center">
                            <img src="../asset/icones/trash3.svg" class="w-5 h-5" alt="supprimer">
                        </button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>

{% endblock %}
