{% block content %}
<div class="pt-2">
    <div class="flex flex-col items-center bg-cover bg-no-repeat bg-[url('../asset/bg_img.svg')] gap-2 p-2 py-12 sm:py-24">
        <div class="flex flex-col gap-3 w-full max-w-xs sm:max-w-md p-6 sm:p-8 bg-[#A23145] bg-opacity-70 rounded-lg drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
            <h1 class="text-2xl sm:text-3xl font-bold text-white text-center mb-4 sm:mb-6">Connexion</h1>
